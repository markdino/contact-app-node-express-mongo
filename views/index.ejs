<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact App</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <main class="container p-10">
      <!-- Search bar -->
      <nav id="search-nav" class="row p-10">
        <form
          action="/contact/search"
          method="POST"
          id="search-form"
          class="row"
        >
          <section class="search-group row">
            <label for="search-field">Search</label>
            <section id="search-border" class="row">
              <input type="search" name="search" id="search-field" />
              <button type="submit" id="search-btn">
                <svg viewBox="0 0 512 512" class="search-svg">
                  <path
                    d="M505 442.7L405.3 343c-4.5-4.5-10.6-7-17-7H372c27.6-35.3 44-79.7 44-128C416 93.1 322.9 0 208 0S0 93.1 0 208s93.1 208 208 208c48.3 0 92.7-16.4 128-44v16.3c0 6.4 2.5 12.5 7 17l99.7 99.7c9.4 9.4 24.6 9.4 33.9 0l28.3-28.3c9.4-9.4 9.4-24.6.1-34zM208 336c-70.7 0-128-57.2-128-128 0-70.7 57.2-128 128-128 70.7 0 128 57.2 128 128 0 70.7-57.2 128-128 128z"
                  />
                </svg>
              </button>
            </section>
          </section>
        </form>
        <a
          id="add-btn"
          class="row"
          title="Add new contact"
          href="/contact/create"
        >
          <svg viewBox="0 0 448 512" class="add-svg">
            <path
              d="M416 208H272V64c0-17.67-14.33-32-32-32h-32c-17.67 0-32 14.33-32 32v144H32c-17.67 0-32 14.33-32 32v32c0 17.67 14.33 32 32 32h144v144c0 17.67 14.33 32 32 32h32c17.67 0 32-14.33 32-32V304h144c17.67 0 32-14.33 32-32v-32c0-17.67-14.33-32-32-32z"
            />
          </svg>
        </a>
      </nav>
      <!-- Contact List -->
      <section class="contacts py-10">
        <% data.forEach(person=>{ %>
        <section id="contact-list" class="row my-10">
          <section class="avatar-circle">
            <img
              src="<%= person.avatar || `/user.svg` %>"
              alt="avatar"
              class="avatar-img"
            />
          </section>
          <a class="name" href="/contact/<%= person.id %>/view">
            <%= person.name %>
          </a>
          <section>
            <form action="/contact/<%= person.id %>/delete" method="POST">
              <button class="delete" title="Delete contact">
                <svg viewBox="0 0 448 512" class="delete-svg">
                  <path
                    d="M32 464a48 48 0 0 0 48 48h288a48 48 0 0 0 48-48V128H32zm272-256a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zM432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16z"
                  />
                </svg>
              </button>
            </form>
          </section>
        </section>
        <% }) %>
      </section>
      <footer></footer>
    </main>
  </body>
</html>
